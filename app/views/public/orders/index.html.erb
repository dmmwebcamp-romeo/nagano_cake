<div class="container">
  <div class="row">
    <div class="col-sm-12  px-5 px-sm-1 mx-auto">
    　
    　<h4 style="width: 150px; margin: 25px; background: #eee">注文履歴一覧</h4>
    　
      
      <table border="1" width="100%">
        <thead>
            <th class="table-active" style="width:12%">注文日</th>
            <th class="table-active" style="width:40%">配送先</th>
            <th class="table-active" style="width:18%">注文商品</th>
            <th class="table-active" style="width:8%">支払金額</th>
            <th class="table-active" style="width:10%">ステータス</th>
            <th class="table-active" style="width:12%">注文詳細</th>
        </thead>
        
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td class="align-middle"><%= "〒#{order.post_code}" %><br><%= order.address %><br><%= order.name %></td>
              
              <td class="align-middle" style="word-break:break-all">
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br>
                <% end %>
              </td>
              

              
              <td class="align-middle"><%= "#{number_with_delimiter(order.total_price + 800)}円" %></td>
              <td class="align-middle"><%= order.status_i18n %></td>
              <td style="text-align:center"><%= link_to "表示する", order_path(order), class: "btn btn-primary"  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>