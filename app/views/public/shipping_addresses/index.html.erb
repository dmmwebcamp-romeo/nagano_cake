<div class="container">
  <div class="row">
    <div class="col-10 pt-5">

      <h4 style="width: 27%; text-align: center; margin: 15px; background: #eee">配送先登録 / 一覧</h4>
  
      <%= form_with model:@shipping_address do |f| %>
        <div class="form-group">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td class="col-3.5">郵便番号(ハイフンなし)</td>
                <td><%= f.text_field :post_code, placeholder:"00000000" %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :address, :size=>"60", placeholder:"東京都渋谷区代々木神園町0-0" %></td>
              </tr>
              <tr>
                <td>宛名</td>
                <td><%= f.text_field :name, placeholder:"令和太郎" %></td>
                <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      <% end %>
  
      <table class="table table-bordered ">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </tr>
          <tr></tr>
        </thead>
        <tbody>
          <% @shipping_addresses.each do |shipping_address| %>
            <tr>
              <td><%= shipping_address.post_code %></td>
              <td><%= shipping_address.address %></td>
              <td><%= shipping_address.name %></td>
              <td>
                <%=link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-success" %>
                <%=link_to "削除する", shipping_address_path(shipping_address), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>