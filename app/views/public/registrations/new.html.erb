<div class="container">
  <div class="row">
    <div class="col-6 ml-2">
      <h2 style="width: 50%; text-align: center; margin: 15px; background: #7f141a; color:white">新規会員登録</h2>
    </div>
  </div>

    <br>

    <div class="row">
      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table class="table table-borderless">
        <tbody>
         <div class="col-4">
          <tr>
            <th>名前</th>
            <th>
              <%= f.label :"(姓)" %>
            </th>
            <th>
              <%= f.text_field :last_name, placeholder:"令和" %>
            </th>
            <th>
              <%= f.label :"(名)" %>
            </th>
            <th>
              <%= f.text_field :first_name, placeholder:"太郎" %>
            </th>
          </tr>
        </div>
     </div>

        <div class="row">
          <tr>
            <th>フリガナ</th>
            <th>
              <%= f.label :"(セイ)" %>
            </th>
            <th>
              <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
            </th>
            <th>
              <%= f.label :"(メイ)" %>
            </th>
            <th>
              <%= f.text_field :first_name_kana, placeholder:"タロウ" %>
            </th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th></th>
            <th>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
            </th>
          </tr>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <th></th>
            <th>
              <%= f.text_field :post_code, placeholder:"00000000" %>
            </th>
          </tr>
          <tr>
            <th>住所</th>
            <th></th>
            <th>
              <%= f.text_field :address,  :size=>"40", placeholder:"東京都渋谷区代々木神園町0-0" %>
            </th>
          </tr>
          <tr>
            <th>電話番号(ハイフンなし)</th>
            <th></th>
            <th>
              <%= f.text_field :phone_number, placeholder:"0000000000" %>
            </th>
          </tr>
          <tr>
            <th>パスワード(6文字以上)</th>
            <th></th>
            <th>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </th>
          </tr>
          <tr>
            <th>パスワード(確認用)</th>
            <th></th>
            <th>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </th>
          </tr>
          <tr>
            <th></th>
            <th></th>
            <th>
              <%= f.submit "新規登録", class: 'btn btn-lg btn-success px-5' %>
            </th>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>

    <div class="row">
      <div class="col-4">
       <h3 style="width: 80%; text-align: center; margin: 15px; background: #eee">既に登録済みの方</h3>
        <label style="margin: 1px 50px">
        <u class="text-primary"><%= link_to "こちら" , customer_session_path %></u> からログインしてください
        </label>
      </div>
    </div>

</div>