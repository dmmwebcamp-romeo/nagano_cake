<div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
  <% items.each do |item|%>
  <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
    <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
      <%= link_to item_path(item) do%>
        <p class="img-wrap"><%= image_tag item.image, width: "150×150", format: "jpeg", fallback: "no_image.jpeg" %></p>
      <% end %>
      <div class="card-body">
        <p class="item-details item-name card-text font-weight-bold"><%= item.name %></p>
        <% if item.is_active == true %>
          <p class="item-details card-text font-weight-bold">¥<%= (item.price * 1.1).round.to_s(:delimited) %></p>
        <% else %>
          <p class="text-danger font-weight-bold card-text">販売停止中</p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>