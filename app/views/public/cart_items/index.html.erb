<div class="container mt-5">
  <div class="d-flex justify-content-between mb-3">
    <h3>ショッピングカート</h3>
    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
  </div>
  <div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if current_customer.cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.image, size: "80x70" %>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= cart_item.item.with_tax_price.to_s(:delimited, delimiter: ',') %>円
            <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
          </td>
          <td>
            <%= f.select :quantity, *[1..10],{ selected: cart_item.quantity } %>
            <%= f.submit "変更", class: "btn btn-success" %>
          </td>
            <% end %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited, delimiter: ',') %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-between mb-3">
      <div><%= link_to "買い物を続ける", root_path, class: "btn btn-sm btn-primary" %></div>
      <table>
        <tbody class="table table-bordered">
          <td>合計金額</td>
          <td><%= @total_price.to_s(:delimited, delimiter: ',') %>円</td>
        </tbody>
      </table>
    </div>



    <div class="text-center">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>