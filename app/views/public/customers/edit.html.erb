<div class='container'>
  <div class="row m-5">
    <div class='col-3 d-flex align-items-center justify-content-center' style="background: #7f141a; color:white">
    <h3>会員情報編集</h3>
    </div>
 </div>

  <div class='row'>
    <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %></td>
        <td><%= link_to "退会する", customers_quit_path, class: "btn btn-md btn-danger" %></td>
        <td></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>
