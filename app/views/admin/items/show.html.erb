<div class= "container">

  <div class= "row">
      <h3>商品詳細</h3>
  <div>
      <%= image_tag @item.get_image %>
  </div>

  <div class= "row">

     <div class= "col-3">
       商品名
     </div>
     <div class= "col-9">
       <%= @item.name %>
     </div>

     <div class= "col-3">
       商品説明
     </div>
     <div class= "col-9">
       <%= @item.description %>
     </div>

    <div class= "col-3">
       ジャンル
     </div>
     <div class= "col-9">
       <%= @item.genre.name %>
     </div>

    <div class= "col-3">
      税込価格<br>
      (税抜価格）
    </div>
     <div class= "col-9">
       <%= @item.add_tax_sales_price.to_s(:delimited) %>
       (<%= @item.price.to_s(:delimited) %>)円
     </div>

      <div class= "col-3">
       販売ステータス
     </div>
     <div class= "col-9">
      <%= @item.is_active ? '販売中' : '販売停止中'  %>
     </div>

    <div class="form-group">
      <%=  link_to "編集する", edit_admin_item_path,class: "btn btn-success" %>
    </div>
</div>


    </div>
  </div>
</div>
