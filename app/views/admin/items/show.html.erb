<div class= "container">
  <div class="container px-5 px-sm-0 pt-5">
    <div class="row">
      <div class="col-md-3">
        <h3 class="p-md-2" style="width: 70%; text-align: center; margin: 15px; background: #eee">商品詳細</h3>
        <table class="table">
          <tbody>
            <tr>
              <%= image_tag @item.get_image(200, 200) %>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse table-borderless">
          <tbody>
            <tr>
              <th>商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= @item.description %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>税込価格(税抜価格）</th>
              <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <% if @item.is_active == true %>
                <strong class="text-success">販売中</strong>
                <% else %>
                <strong class="text-secondary">販売停止中</strong>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-9">
          <div class="text-center">
            <%=  link_to "編集する", edit_admin_item_path,class: "btn btn-md btn-success" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>








