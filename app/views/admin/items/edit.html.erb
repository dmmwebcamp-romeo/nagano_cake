<div class= "container">

  <div class= "row">

    <div class= "col">
      <h1>商品編集</h1>

  <div class= "row">

    <%= form_with model: @item, url: admin_item_path(@item.id),method: :patch do |f| %>
        <div class="form-group">
          <%= f.label "商品画像" %>
          <%= f.file_field :image, :class => "form-control-file user_image" %>
        </div>

        <div class="form-group">
          <%= f.label "商品名" %>
          <%= f.text_field :name, :class => "form-control name" %>
        </div>

        <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :description, :class => "form-control description" %>
        </div>

         <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"} %>
        </div>

        <div class="form-group">
          <%= f.label :"税抜価格" %>
          <%= f.text_field :price %>円
        </div>

        <div class="form-group">
          <%= f.label :"販売ステータス" %>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-blick;"} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        </div>

        <div class="form-group">
        <%= f.submit "変更を保存",class: "btn btn-success" %>
        </div>
    <% end %>
</div>


    </div>
  </div>
</div>