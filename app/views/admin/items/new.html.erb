<div class= "container">

  <div class= "row">

    <div class= "col">

      <h1>新規商品登録</h1>

  <div class= "row">

      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>

      <div class="form-group">
        <%= f.label "商品画像" %>
        <%= f.file_field :image, accept: "image/*",:class => "form-control Small file input example" %>
      </div>

      <div class="form-group">
        <%= f.label "商品名" %>
        <%= f.text_field :name, placeholder: "商品名" %>
      </div>
      <div class="form-group">
        <%= f.label "商品説明" %>
        <%= f.text_area :description, placeholder: "ここに説明文を記述します" %>
      </div>
      <div class="form-group">
        <%= f.label "ジャンル" %>
        <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "--選択してください--"} %>
      </div>
      <div class="form-group">
        <%= f.label :"税抜価格" %>
        <%= f.text_field :price, placeholder: "1000" %>円
      </div>
      <div class="form-group">
        <%= f.label :"販売ステータス" %>
        <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-blick;"} %>
        <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録",class: "btn btn-success" %>
      </div>
    <% end %>
  </div>


    </div>
  </div>
</div>
