<div class= "container">
  <div class= "row">
    <div class="col">

      <h1>商品一覧</h1>

      <!--//#商品新規登録ボタン（new.html)　リンク-->
      <button>
        <%= link_to new_admin_item_path do %>
        <i class="fal fa-plus-circle"></i>
      </button>
        <% end %>

      <table class= "table table-hover tableinverse">

        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

    <% @items.each do |item| %>

        <tbody>
          <tr>
            <td>
              <%= item.id %>
            </td>

            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>

            <td>
              <%= item.price.to_s(:delimited) %>
            </td>

            <td>
              <%= item.genre.name %>
            </td>

            <td>
              <%= item.is_active ? '販売中' : '販売停止中'  %>
            </td>
          </tr>
        </tbody>
    <% end %>
      </table>

      <!--%= #paginate items %>-->


    </div>
  </div>
</div>