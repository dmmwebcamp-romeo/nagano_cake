<div class='container'>
  <h2 style="width: 50%; text-align: center; margin: 15px; background: #7f141a; color:white"><%= "#{@customer.last_name}#{@customer.first_name}さんの会員情報編集"%></h2>
  <div class='row'>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :post_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, '有効', class: "mr-2" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, '退会' %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </td>
        <td></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>