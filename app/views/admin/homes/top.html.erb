<div class="container">
  <div class="col-md-8 offset-md-1">
    <h2 style="width: 50%; text-align: center; margin: 15px; background: #eee">注文履歴一覧</h2>
    <div class="row">
      <table class="table table-hover table-inverse">
        <thead>
            <th></th>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td></td>
            <td>
              <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %>
            </td>
            <td>
              <%= order.customer.last_name + order.customer.first_name %>
            </td>
            <td>
              <%= order.order_items.sum(:quantity) %>
            </td>
            <td>
              <%= order.status_i18n %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div><%= paginate @orders %></div>
    </div>
  </div>
</div>