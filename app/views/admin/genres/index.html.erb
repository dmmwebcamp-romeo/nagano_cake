<div class="container my-5">
 <p>ジャンル一覧・追加</p>
  <div class="row">
   <div class="col-10">
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
     <table class="table">
      <tr>
       <td>ジャンル名</td>
       <td><%= f.text_field :item_genre %></td>
       <td><%= f.submit '新規登録', class: "btn-success btn-sm mx-auto" %></td>
      </tr>
     </table>
    <% end %>
   </div>
 </div>

   <div class="row">
    <div class="col-5">
     <table class="table">
      <thead>
      <tr>
       <th>ジャンル</th>
       <th></th>
      </tr>
     </thead>
      <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.item_genre %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-success btn-sm mx-auto" %></td>
      </tr>
      <% end %>
     </table>
    </div>
   </div>
  </div>
</div>