<div class="container">
 <h4 style="width: 20%; margin: 50px; background: #eee">ジャンル一覧・追加</h4>
  <div class="row">
   <div class="col-10">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
     <table class="table">
      <tr>
       <td>ジャンル名</td>
       <td><%= f.text_field :name, placeholder:"ジャンル名" %></td>
       <td><%= f.submit '新規登録', class: "btn-success btn-sm mx-auto" %></td>
      </tr>
     </table>
    <% end %>
   </div>
 </div>

   <div class="row">
    <div class="col-5">
     <table class="table">
      <thead>
      <tr>
       <th>ジャンル</th>
       <th></th>
      </tr>
     </thead>
      <% @genres.each do |genre| %>
      <tr>
       <td><%= genre.name %></td>
       <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn-success btn-sm mx-auto" %></td>
      </tr>
      <% end %>
     </table>
    </div>
   </div>
  </div>
</div>